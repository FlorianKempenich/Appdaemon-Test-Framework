{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            // NOTE: If problem launching the command: Start VSCode from terminal
            //       => Go to directory -> `code .`
            "label": "Watch tests",
            "type": "shell",
            "command": "ptw --beforerun='echo PYTEST-START-TAG' --afterrun='echo PYTEST-END-TAG' -- --tb=line",
            "isBackground": true,
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "never",
                "panel": "dedicated"
            },
            "problemMatcher": {
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+)? (.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "^PYTEST-START-TAG.*",
                    "endsPattern": "^PYTEST-END-TAG.*"
                }
            }
        }
    ]
}